<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.slr_e_ticketer.slr_e_ticketer" >
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SignActivity"
            android:label="@string/title_activity_activity_sign" >
        </activity>
        <activity
            android:name=".RegistrationActivity"
            android:label="@string/title_activity_registration" >
        </activity>
        <activity
            android:name=".VerifyUserRegistration"
            android:label="@string/title_activity_activity_user_registration" >
        </activity>
        <activity
            android:name=".ServiceActivity"
            android:label="@string/title_activity_service" >
        </activity>
        <activity
            android:name=".PurchaseTicket"
            android:label="@string/title_activity_purchase_ticket" >
        </activity>
        <activity
            android:name=".PurchaseTicketDetails"
            android:label="@string/title_activity_purchase_ticket_details" >
        </activity>

    </application>

</manifest>
