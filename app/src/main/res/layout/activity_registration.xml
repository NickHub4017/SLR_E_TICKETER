<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.slr_e_ticketer.slr_e_ticketer.RegistrationActivity">
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="E-TICKETER"
        android:textStyle="bold"
        android:textSize="40dp"
        android:id="@+id/labelEticketer"
        android:layout_weight="0.00"
        android:layout_gravity="center_vertical"
        android:gravity="center" />

    <TextView
        android:layout_width="351dp"
        android:layout_height="42dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User Registration"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/labelUserRegistration"
        android:layout_below="@+id/labelEticketer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="First Name"
        android:textSize="25dp"
        android:id="@+id/labelFirstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/labelUserRegistration"
        android:layout_alignRight="@+id/labelEticketer"
        android:layout_alignEnd="@+id/labelEticketer" />

    <EditText
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTxtFirstName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Last Name"
        android:textSize="25dp"
        android:id="@+id/labelLastName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/labelUserRegistration"
        android:layout_alignRight="@+id/labelEticketer"
        android:layout_alignEnd="@+id/labelEticketer" />

    <EditText
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTxtLastName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="NIC Number"
        android:textSize="25dp"
        android:id="@+id/labelNIC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/labelUserRegistration"
        android:layout_alignRight="@+id/labelEticketer"
        android:layout_alignEnd="@+id/labelEticketer" />

    <EditText
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTxtNic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email"
        android:textSize="25dp"
        android:id="@+id/labelEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/labelUserRegistration"
        android:layout_alignRight="@+id/labelEticketer"
        android:layout_alignEnd="@+id/labelEticketer" />

    <EditText
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTxtEmail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Phone Number"
        android:textSize="25dp"
        android:id="@+id/labelPhoneNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/labelUserRegistration"
        android:layout_alignRight="@+id/labelEticketer"
        android:layout_alignEnd="@+id/labelEticketer" />
    <EditText
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTxtPhoneNumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User Name"
        android:textSize="25dp"
        android:id="@+id/labelUserName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/labelUserRegistration"
        android:layout_alignRight="@+id/labelEticketer"
        android:layout_alignEnd="@+id/labelEticketer" />
    <EditText
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTxtUserName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:textSize="25dp"
        android:id="@+id/labelPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/labelUserRegistration"
        android:layout_alignRight="@+id/labelEticketer"
        android:layout_alignEnd="@+id/labelEticketer" />
    <EditText
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTxtPassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Confirm Password"
        android:textSize="25dp"
        android:id="@+id/labelConfirmPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/labelUserRegistration"
        android:layout_alignRight="@+id/labelEticketer"
        android:layout_alignEnd="@+id/labelEticketer" />
    <EditText
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:id="@+id/editTxtConPassword" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create My Account"
        android:id="@+id/btnCreateMyAccount"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/labelConfirmPassword"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
</ScrollView>
