<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.slr_e_ticketer.slr_e_ticketer.PurchaseTicket"
    android:weightSum="1">

    <TextView
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="E-TICKETER"
        android:textStyle="bold"
        android:textSize="40dp"
        android:id="@+id/labelEticketer"
        android:layout_weight="0.00"
        android:layout_gravity="center_vertical"
        android:gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Purchase Ticket"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/labelPurchaseTicket"
        android:layout_below="@+id/labelEticketer"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_weight="0.05" />

    <TextView
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Starting Station"
        android:id="@+id/labelStartStation" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dropdownStartStation"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="End Station"
        android:id="@+id/labelEndStation" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dropdownEndStation"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Train Class"
        android:id="@+id/labelTrainClass" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dropdownTrainClass"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/labelDate" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/textDate"
        android:layout_weight="0.00" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:text="GET MY TICKET"
        android:id="@+id/btnGetMyTicket"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.23" />


</LinearLayout>
